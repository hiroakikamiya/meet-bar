<div class="contents row">
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="title">meet-bar</h2>
  <div class="user-sign-box">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="newuser-box">
        <div class="field">
          <%= f.label :name, "氏名", class:"form-text"%><br />
          <%= f.text_field :name, placeholder: "氏名", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス", class:"form-text" %><br /> 
          <%= f.email_field :email, placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class:"form-text"%>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: " パスワード" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード（確認用）", class:"form-text" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " パスワード" %>
        </div>

        <div class="avatar-field">
          <%= f.label :avatar, "アイコンを設定してください", class:"avatar-text" %><br />
          <%= f.file_field :avatar%>
        </div>

        <div class="actions">
          <%= f.submit "アカウントを作る", class:"create-btn" %>
        </div>
      </div>
    <% end %>
  </div>
    <div class="login-link">
    <div class="login-text">
      既にアカウントをお持ちの方
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>

