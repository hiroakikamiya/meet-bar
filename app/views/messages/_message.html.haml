- if message.user_id ==  current_user.id
  .mymessage
    .mymessage__box
      .lower-mymessage
        .lower-mymessage__date
          = message.created_at.strftime("%Y/%m/%d %H:%M")
      .upper-mymessage
        - if message.message.present?
          .upper-mymessage__content-box
            .upper-mymessage__content-box__text
              = simple_format(message.message)
- else 
  .message
    .message__box
      .upper-message
        .upper-message__avatar
          - if message.user.avatar.attached?
            = image_tag message.user.avatar, class: 'upper-message__avatar__image'
          - else 
            = image_tag "default.jpg", class: 'upper-message__avatar__image'
        - if message.message.present?
          .upper-message__content-box
            %p.upper-message__content-box__text
              = message.message
      .lower-meesage
        .lower-message__date
          = message.created_at.strftime("%Y/%m/%d %H:%M")