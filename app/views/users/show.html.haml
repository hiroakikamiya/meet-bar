= render partial: '/shared/header'
= render partial: '/shared/sidebar'
.contents
  .h2
    参加予定のMEET
  .contents__top-content
    .contents__top-content__text
      MEETを管理しよう！
  .line
  - current_user.restaurants.each do |restaurant|
    .contents__main-content
      .card
        .catch-copy
          = restaurant.catchcopy
        %ul.data
          %li.data--price
            店名：
            = restaurant.shop_name
          %li.data--price
            場所：
            = restaurant.address
          %li.data--price
            金額：
            = restaurant.price
          %li.data--capacity
            人数：
            = restaurant.capacity
          %li.data--date
            日付：
            = restaurant.reserve_date.strftime("%Y/%m/%d")
          %li.data--date
            時間：
            = restaurant.reserve_time.strftime("%H:%M")
        .comment
          .heading
            MEETERコメント
          .comment
            = restaurant.comment
        .image_box
          = image_tag (restaurant.images[0].image), class: "shop_image"
        .cancel
          = link_to "参加を取り消す", user_path(restaurant.id), method: :delete, class: 'cancel__btn'
       