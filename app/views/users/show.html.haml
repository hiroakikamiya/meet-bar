= render partial: '/shared/header'
= render partial: '/shared/sidebar'
.contents
  - @host_restaurant.each do |restaurant|
    .h2
      MEETを管理しよう
    .contents__top-content
      .contents__top-content__text
        主催しているMEET
    .line
    .contents__main-content
      .card
        .catch-copy
          = link_to restaurant.catchcopy, restaurant_messages_path(restaurant), class: "catch-copy__link"
        %ul.data
          %li.data--price
            店名：
            = restaurant.shop_name
          %li.data--price
            場所：
            = restaurant.address
          %li.data--price
            金額：
            = restaurant.price
          %li.data--capacity
            人数：
            = restaurant.capacity
          %li.data--date
            日付：
            = restaurant.reserve_date.strftime("%Y/%m/%d")
          %li.data--date
            時間：
            = restaurant.reserve_time.strftime("%H:%M")
        .comment
          .heading
            MEETERコメント
          .comment
            = restaurant.comment
        .image_box
          = image_tag (restaurant.images[0].image), class: "shop_image"
  - @attend_restaurant.each do |gest|
    - gest_restaurant = Restaurant.where(id: gest.restaurant_id)
    - gest_restaurant.each do |restaurant|
      .contents__top-content.attend-content
        .contents__top-content__text
          参加予定のMEETです
      .line
      .contents__main-content
        .card
          .catch-copy
            = link_to restaurant.catchcopy, restaurant_messages_path(restaurant), class: "catch-copy__link"
          %ul.data
            %li.data--price
              店名：
              = restaurant.shop_name
            %li.data--price
              場所：
              = restaurant.address
            %li.data--price
              金額：
              = restaurant.price
            %li.data--capacity
              人数：
              = restaurant.capacity
            %li.data--date
              日付：
              = restaurant.reserve_date.strftime("%Y/%m/%d")
            %li.data--date
              時間：
              = restaurant.reserve_time.strftime("%H:%M")
          .comment
            .heading
              MEETERコメント
            .comment
              = restaurant.comment
          .image_box
            = image_tag (restaurant.images[0].image), class: "shop_image"
          .cancel
            = link_to "参加を取り消す", user_path(restaurant.id), method: :delete, class: 'cancel__btn'